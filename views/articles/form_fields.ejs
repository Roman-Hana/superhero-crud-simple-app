<div class="form-group">
  <label for="nickname">Nickname</label>
  <input
    required
    value="<%= article.nickname %>"
    type="text"
    name="nickname"
    id="nickname"
    class="form-control"
  />
</div>
<div class="form-group">
  <label for="real_name">Real name</label>
  <input
    required
    value="<%= article.real_name %>"
    type="text"
    name="real_name"
    id="real_name"
    class="form-control"
  />
</div>
<div class="form-group">
  <label for="catch_phrase">Catch phrase</label>
  <input
    required
    value="<%= article.catch_phrase %>"
    type="text"
    name="catch_phrase"
    id="catch_phrase"
    class="form-control"
  />
</div>
<div class="form-group">
    <label for="superpowers">Superpowers</label>
    <input
      required
      value="<%= article.superpowers %>"
      type="text"
      name="superpowers"
      id="superpowers"
      class="form-control"
    />
  </div>
  <div class="form-group">
    <label for="image">ImageURL</label>
    <input
      required
      value="<%= article.image %>"
      type="text"
      name="image"
      id="image"
      class="form-control"
    />
  </div>
<div class="form-group">
  <label for="origin_description">Origin description</label>
  <textarea
    required
    type="text"
    name="origin_description"
    id="origin_description"
    class="form-control"
  ><%= article.origin_description %></textarea>
</div>


<button type="submit" class="btn btn-primary">Save</button>
<a href="/" class="btn btn-danger">Cancel</a>