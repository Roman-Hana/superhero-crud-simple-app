<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
      integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
      crossorigin="anonymous"
    />
    <title>Hero CRUD database</title>
  </head>
  <body>
    <div class="container" >
      <h1 class="mb-4">Hero CRUD database</h1>
      <a href="/articles/new" class="btn btn-success">Create a Hero</a>
      <div class="row">
      <% article.forEach(article => { %>  
    <div class="col-sm">
      <div class="card mt-4" style="width: 17rem;">
        <img class="card-img-top"  alt=<%= article.nickname %> src=<%= article.image %>  />
        <div class="card-body">
          <h4 class="card-title"><%= article.nickname %></h4>
          <!-- <div class="card-subtitle text-muted mb-2"><%= article.catch_phrase %></div> -->
          <!-- <div class="card-text mb-2"><%= article.origin_description %></div> -->
          <a href="articles/<%= article.id %>" class="btn btn-primary">Read</a>
          <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    </div>
      <% }) %>
    </div>
    </div>
  </body>
</html>
